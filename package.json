{
  "name": "pleno-audit",
  "version": "0.0.1",
  "license": "AGPL-3.0-or-later",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently -n debug,ext,logs -c blue,green,yellow \"pnpm -C app/debugger start server\" \"pnpm -C app/extension dev\" \"sleep 3 && pnpm -C app/debugger start logs\"",
    "dev:ext": "pnpm -C app/extension dev",
    "build": "pnpm -C app/extension build",
    "server": "pnpm -C app/server start",
    "server:dev": "pnpm -C app/server dev",
    "website": "pnpm -C app/website dev",
    "website:build": "pnpm -C app/website build",
    "lint": "oxlint .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^4.0.17",
    "concurrently": "^9.1.2",
    "oxlint": "^1.38.0",
    "vitest": "^4.0.17"
  }
}
