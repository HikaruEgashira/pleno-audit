{
  "name": "pleno-audit",
  "version": "0.0.1",
  "license": "AGPL-3.0-or-later",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently -n debug,ext -c blue,green \"pnpm -C app/debugger start server\" \"pnpm -C app/extension dev\"",
    "dev:ext": "pnpm -C app/extension dev",
    "build": "pnpm -C app/extension build",
    "server": "pnpm -C app/server start",
    "server:dev": "pnpm -C app/server dev",
    "website": "pnpm -C app/website dev",
    "website:build": "pnpm -C app/website build",
    "lint": "oxlint ."
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "oxlint": "^1.38.0"
  }
}
